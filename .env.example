# Service Configuration
SERVICE_NAME=document-processor
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Processing Configuration
MAX_CONCURRENT_SOURCES=1000
BATCH_SIZE=1000
WORKER_COUNT=4

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=documents
KAFKA_GROUP_ID=processors
KAFKA_PARTITIONS=50

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=300
REDIS_PASSWORD=

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=docdb
POSTGRES_USER=docuser
POSTGRES_PASSWORD=docpass123
POSTGRES_POOL_SIZE=20

# MongoDB Configuration
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DATABASE=documents
MONGO_USER=
MONGO_PASSWORD=

# Translation API Keys (REQUIRED for translation)
GOOGLE_TRANSLATE_API_KEY=your-google-api-key-here
AZURE_TRANSLATOR_KEY=your-azure-key-here
AZURE_TRANSLATOR_REGION=eastus
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Rate Limits (requests per minute)
GOOGLE_TRANSLATE_RPM=1000
AZURE_TRANSLATE_RPM=2000
ANTHROPIC_RPM=50

# Bloom Filter Configuration
BLOOM_FILTER_CAPACITY=1000000
BLOOM_FILTER_ERROR_RATE=0.01

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Monitoring Configuration
PROMETHEUS_PORT=9090
ENABLE_TRACING=true
ENABLE_METRICS=true
